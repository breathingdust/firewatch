{
  "name": "firewatch",
  "version": "2.0.2",
  "description": "Monitors a GitHub repository for issues or pull requests that receive upvotes over a certain rate in a timeperiod",
  "main": "index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest src/",
    "lint": "eslint src/",
    "format-check": "prettier --check src/",
    "all": "npm run lint && npm run format-check && npm run build && npm run test"
  },
  "author": "Simon Davis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/breathingdust/firewatch/issues"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "homepage": "https://github.com/breathingdust/firewatch#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nock": "^14.0.3",
    "prettier": "3.5.3"
  }
}